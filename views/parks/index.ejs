<% layout('layouts/boilerplate.ejs') %>
    <div id="map" style="width:100%; height:500px"></div>

    <div class="my-3">
        <h1>All Parks</h1>
        <h4><a href="/parks/new">Submit a park</a></h4>
    </div>

    <% for(let park of parks){ %>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <a href="/parks/<%= park._id %> ">
                        <% if(park.images[0]) {%>
                            <img class="img-fluid" alt="" src="<%= park.images[0].url %> ">
                            <% } else {%>
                                <img src="" alt="">
                                <% } %>
                    </a>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= park.title %>
                        </h5>
                        <h6 class='card-text'>
                            <%= park.location %>
                        </h6>
                        <small class=" card-text text-muted">
                            <%= park.address %>
                        </small>
                        <p class='card-text'>
                            <%= park.description %>
                        </p>
                        <a href="/parks/<%= park._id %> " class="btn btn-primary">View details</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>

            <script>
                const mapToken = '<%=process.env.MAPBOX_TOKEN%>';

            </script>
            <script>
                const parks = {features: <%- JSON.stringify(parks) %>}
        
            </script>
            <script src="/js/clusterMap.js"></script>